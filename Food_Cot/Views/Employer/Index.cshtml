@{
    ViewData["Title"] = "Employer";
}
@section Styles {

    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" type="text/css" rel="stylesheet" />
    <link href="//cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/jqueryui-editable/css/jqueryui-editable.css" rel="stylesheet"/>
    <link href="~/plugins/select/selectr.min.css" rel="stylesheet"/>
}
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-end">
               <button type="button" class="btn btn-outline-primary mt-3 btn-round ms-auto d-flex" data-bs-toggle="modal" data-bs-target="#exampleModal">+Add New</button>
               
            </div>           
              <h2 class="page-title mt-3">Registered Employers</h2>              
        </div><!--end page-title-box-->
    </div><!--end col-->
</div>
<div class="row">
    <div class="col-12">
        <div class="card mt-3">
            <div class="card-body">
                <div class="card-body">
                        <div class="mb-3">
                            <div class="row form-row">
                                <div class="col-md col-sm-4">
                                    <label for="">Class</label>
                                    <input type="text" name="From" class="form-control" placeholder="Class">
                                </div>
                                <div class="col-md col-sm-4">
                                    <label for="inputEmail4">stream </label>
                                    <input type="text" name="To" class="form-control" placeholder="Stream">
                                </div>
                                <div class="col-md col-sm-4">
                                    <label for="inputEmail4">Status:</label>
                                    <select id="T_Status" name="Status" class="custom-select form-control" placeholder="Status">
                                        <option selected>All</option>
                                        <option value="Pending">Pending Approval</option>
                                        <option>Processing</option>
                                        <option value="Processed">Successfull</option>
                                        <option>Failed</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        
                        <table id="employerTable" class="table dt-responsive">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Employer Name</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                        </table>
                </div>               
            </div>
        </div>
    </div>
</div>

<!-- modal-dialog -->

<div class="modal fade bd-example-modal-lg" id ="exampleModal" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
     <div class = "modal-dialog modal-dialog-centered modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header"> 
                <h6 class="modal-title m-0 text-dark" id="AddAccountModal">Add Employer Details</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="add-employer" name="addaccountform" action="" method="post" novalidate>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                       <label for="number">Employer Id</label>
                                            <div class="input-group">
                                                <input type="number" name="id" class="form-control mb-3" placeholder="Enter Id" required>
                                            </div>                                          
                                    </div>
                                </div>       
                                <div class="col-md-6">
                                <div class="form-group">
                                    <label for="name">Employer Name</label>
                                    <div class="input-group">
                                        <input type="text" name="employername" class="form-control mb-3" placeholder= "Enter Employer Name"
                                </div>
                            </div>  
                            
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <button type="submit" class="btn btn-outline-primary btn-round px-3 py-2 mt-4" id="add-client-submit-button">Create </button>                     
                            </div> 
                        </div>                       
                    </div>
                    
                </form>                  
            </div>
        </div>                                
    </div>  
</div>

@section Scripts
{
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.min.js" integrity="sha256-eTyxS0rkjpLEo16uXTS0uVCS4815lc40K2iVpWDvdSY=" crossorigin="anonymous"></script>
