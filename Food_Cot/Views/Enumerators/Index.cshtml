@{
    ViewData["Title"] = "Enumerators";
}
@section Styles {

    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" type="text/css" rel="stylesheet" />
    <link href="//cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/jqueryui-editable/css/jqueryui-editable.css" rel="stylesheet"/>
    <link href="~/plugins/select/selectr.min.css" rel="stylesheet"/>
}
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-end">
                <button type="button" class="btn btn-outline-primary mt-3 btn-round ms-auto d-flex" data-bs-toggle="modal" data-bs-target="#exampleModal">+Add New</button>
                 
            </div>           
              <h2 class="page-title mt-3">Enumerators</h2>              
        </div><!--end page-title-box-->
    </div><!--end col-->
</div>
<div class="row">
    <div class="col-12">
        <div class="card mt-3">
            <div class="card-body">
                <div class="card-body">
                        <div class="mb-3">
                            <div class="row form-row">
                                <div class="col-md col-sm-4">
                                    <label for="">Class</label>
                                    <input type="text" name="From" class="form-control" placeholder="Class">
                                </div>
                                <div class="col-md col-sm-4">
                                    <label for="inputEmail4">stream </label>
                                    <input type="text" name="To" class="form-control" placeholder="Stream">
                                </div>
                                <div class="col-md col-sm-4">
                                    <label for="inputEmail4">Status:</label>
                                    <select id="T_Status" name="Status" class="custom-select form-control" placeholder="Status">
                                        <option selected>All</option>
                                        <option value="Pending">Pending Approval</option>
                                        <option>Processing</option>
                                        <option value="Processed">Successfull</option>
                                        <option>Failed</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        
                        <table id="accounts-datatable" class="table dt-responsive">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Id</th>
                                    <th>FirstName</th>
                                    <th>LastName</th>
                                    <th>NIN_No</th>
                                    <th>Department</th>                                   
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                        </table>
                </div>               
            </div>
        </div>
    </div>
</div>

<!-- modal-dialog -->

<div class="modal fade bd-example-modal-lg" id ="exampleModal" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
     <div class = "modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header"> 
                <h6 class="modal-title m-0 text-dark" id="AddAccountModal">Add Enumerator Details</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="add-account-form" name="addaccountform" action="" method="post" novalidate>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                       <label for="number">Enumerator Id</label>
                                            <div class="input-group">
                                                <input type="number" name="enumeratorid" class="form-control mb-3" placeholder="Enter Id" required>
                                            </div>
                                           
                                    </div>
                                </div>
                                
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="name">First Name</label>
                                            <div class="input-group">
                                                <input type="text" name="firstname" class="form-control mb-3" placeholder="Enter First Name" required>
                                            </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="date">Last Name</label>
                                            <div class="input-group">
                                                <input type="text" name="lastname" class="form-control mb-3" placeholder="Enter Last Name" required>
                                            </div>
                                    </div>
                                </div>
                                                               
                                 <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="name">Gender</label>
                                        <div class="input-group">
                                            <div class="input-group">
                                                <input type="text" name="gender" class="form-control mb-3" placeholder="Enter Sex" required>
                                            </div>
                                        </div>
                                    </div>
                                 </div>
                                 <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="name">NIN No</label>
                                        <div class="input-group">
                                            <input type="text" name="nin_no" class="form-control mb-3" placeholder = "Enter Nin Number" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="name">Department</label>
                                        <div class="input-group">
                       
                                            <input type="text" name="department" class="form-control" placeholder="Enter Department" required>
                                        </div>
                                            
                                    </div>
                                </div>

                                    <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="name">Address</label>
                                            <div class="input-group">
                                                <div class="input-group">
                                                    <input type="text" name="address" class="form-control mb-3" placeholder="Enter Address" required>
                                                </div>
                                            </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="name">Telephone Number</label>
                                        <div class="input-group">
                                            <div class="input-group">
                                                <input type="text" name="telephone" class="form-control mb-3" placeholder="Enter telephone number" required>
                                            </div>
                                        </div>
                                        </div>
                                    </div>
                                   
                        </div>
                        
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="date">Date Registered</label>
                                    <div class="input-group">
                                        <input type="date" name="dateregistered" class="form-control mb-3" placeholder="Enter Registration Date" required>
                                    </div> 
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="picture">Profile pic</label>
                                    <div class="input-group">
                                        <input type="email" name="profilepicture" class="form-control mb-3" placeholder="Attach Profile Picture" required>
                                    </div>
                                </div>
                             </div>
                             
                           
                             
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label> Description</label>
                                        <div class="input-group">
                                            <textarea class="form-control" rows="5" name="LongDescription" aria-label="Enter description" required></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>  
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-outline-primary btn-round px-3 py-2 mt-4" id="add-account-submit-button">Create</button>                     
                        </div>                       
                    </div>
                </form>                  
            </div>
        </div>                                
    </div>  
</div>

<!--  Modal content for view product details -->
